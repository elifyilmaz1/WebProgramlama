@{
    ViewData["Title"] = "Kayıt ol - Hülya Hasçelik Beauty Center";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/kayit_style.css" />
</head>
<body>
    <header>
        <h1>Kayıt Ol</h1>
    </header>

    <form method="post" action="/Hesap/Kayit">
    <div>
        <label for="IsimSoyisim">İsim Soyisim:</label>
        <input type="text" id="IsimSoyisim" name="IsimSoyisim" required />
    </div>
    <div>
        <label for="IletisimNumarası">İletişim Numarası:</label>
        <input type="text" id="IletisimNumarasi" name="IletisimNumarasi" required />
    </div>
    <div>
        <label for="Eposta">E-posta:</label>
        <input type="email" id="Eposta" name="Eposta" required />
    </div>
    <div>
        <label for="Sifre">Şifre:</label>
        <input type="password" id="Sifre" name="Sifre" required />
    </div>
    <div>
        <label for="TekrarSifre">Şifre Tekrarı:</label>
            <input type="password" id="TekrarSifre" name="TekrarSifre" required />
    </div>
    <button type="submit">Kayıt Ol</button>
</form>

<p>Zaten hesabınız var mı? <a href="/Hesap/Giris">Giriş Yap</a></p>
</body>
</html>