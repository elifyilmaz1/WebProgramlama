@{
    ViewData["Title"] = "Üye Girişi - Hülya Hasçelik Beauty Center";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/giris_style.css" />
</head>
<body>
    <header>
        <h1>Üye Girişi</h1>
    </header>
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }


    <section class="login-section">
        <form action="/Hesap/Giris" method="post">
            <div class="form-group">
            <label for="Eposta">E-posta:</label>
            <input type="email" id="Eposta" name="Eposta" required>
            </div>
            <div class="form-group">
            <label for="Sifre">Şifre:</label>
            <input type="password" id="Sifre" name="Sifre" required>
            </div>
            <button type="submit" >Giriş Yap</button>
        </form> 
        @if (!ViewData.ModelState.IsValid)
    {
       
    }
        <p>Hesabınız yok mu? <a href="/Hesap/Kayit">Üye Olun</a></p>
    </section>

   
</body>
</html>
